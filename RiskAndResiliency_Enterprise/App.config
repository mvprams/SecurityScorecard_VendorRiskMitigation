<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>

  <appSettings>
    <!-- OpenAI API Configuration -->
    <!-- Replace YOUR_API_KEY_HERE with your actual OpenAI API key -->
    <add key="OpenAI_APIKey" value="YOUR_API_KEY_HERE" />

    <!-- OpenAI API Endpoint (default: https://api.openai.com/v1/chat/completions) -->
    <add key="OpenAI_Endpoint" value="https://api.openai.com/v1/chat/completions" />

    <!-- OpenAI Model to use (options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo) -->
    <add key="OpenAI_Model" value="gpt-4" />

    <!-- Application Settings -->
    <add key="DefaultCSVPath" value="" />
    <add key="AutoLoadLastFile" value="false" />
    <add key="MaxTokens" value="3000" />
    <add key="Temperature" value="0.7" />

    <!-- Security Framework Standards -->
    <add key="EnableNISTFramework" value="true" />
    <add key="EnableISO27001" value="true" />
    <add key="EnableSOC2" value="true" />
    <add key="EnableGLBA" value="true" />
    <add key="EnablePCIDSS" value="true" />
    <add key="EnableCISControls" value="true" />
  </appSettings>
</configuration>